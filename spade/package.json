{
  "name": "spade",
  "version": "0.1.0-mvp",
  "description": "Angular-optimized Component Library for Project Business",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:a11y": "ng test --include='**/*.a11y.spec.ts' --watch=false",
    "test:a11y:nowatch": "ng test --include='**/*.a11y.spec.ts'",
    "test:a11y:debug": "ng test --include='**/debug-a11y.spec.ts' --watch=false",
    "test:a11y:debug:watch": "ng test --include='**/debug-a11y.spec.ts'",
    "test:a11y:report": "ng test --include='**/*.a11y.spec.ts' --code-coverage --watch=false"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@types/axe-core": "^3.0.6",
    "@types/jasmine": "~5.1.0",
    "axe-core": "^4.10.3",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
